{
 "compilerOptions": {
    "target": "es6",
    "module": "NodeNext",
    "outDir": "./dist",  // Specify the output directory for JavaScript files
    "rootDir": "./src",  // Specify the root directory of your TypeScript source files
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
        "paths": {
      "loginWithCrypto/*": ["node_modules/loginWithCrypto/*"]
    },
    "baseUrl": ".",
    "declaration": false,
        "skipLibCheck": true

  },
  "include": [
    "**/*.ts",
    "**/*.tsx",

  ],

  "paths" : {
    "services/*": ["src/services/*"],
    "errors/*": ["src/errors/*"],
  },
  "exclude": ["node_modules"]
}